<li id="<%= micropost.id %>">
	<%= link_to gravatar_for(micropost.user), micropost.user %>
	<span class="content">
		<a href='/users/<%= "#{micropost.user_id}" %>'>
		<%= User.find(micropost.user_id).name %> @<%= User.find(micropost.user_id).user_name %>
		</a>
	</span>
	<span class="content">
		<%= wrap(micropost.content) %>
	</span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(micropost.created_at) %> ago.
	</span>
	<%= render '/shared/micropost_delete_link', micropost: micropost %>
</li>
<li id="<%= feed_item.id %>">
	<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	<span class="content">
		<a href='/users/<%= "#{feed_item.user_id}" %>'>
		<%= User.find(feed_item.user_id).name %> @<%= User.find(feed_item.user_id).user_name %>
		</a>
	</span>
	<span class="content"><%= wrap(feed_item.content) %></span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
	</span>
	<%= render 'shared/micropost_delete_link', micropost: feed_item %>
</li>